# Chave secreta para o Flask (gerar uma chave segura)
SECRET_KEY=sua_chave_secreta_aqui

# Configuração do banco de dados
# SQLite (padrão)
DATABASE_URL=sqlite:///dzip.db

# PostgreSQL (opcional)
# DATABASE_URL=postgresql://usuario:senha@localhost:5432/dzip

# Configurações de segurança
# Tempo de expiração dos links em dias (padrão: 7)
